{
  "name": "Download_analysis_annotations",
  "description": "To download annotations details from job (algorithm) analysis",
  "schema-version": "cytomine-0.1",
  "container-image": {
    "image": "mizjaggy18/s_download_analysis_annotations",
    "type": "singularity"
  },
  "command-line": "[CYTOMINE_HOST] [CYTOMINE_PUBLIC_KEY] [CYTOMINE_PRIVATE_KEY] [CYTOMINE_ID_PROJECT] [CYTOMINE_ID_SOFTWARE] [CYTOMINE_ID_JOB] [CYTOMINE_ID_USER]",
  "inputs": [
    {
      "id": "cytomine_host",      
      "value-key": "[@ID]",
      "command-line-flag": "--@id",
      "name": "Cytomine host",
      "set-by-server": true,
      "optional": false,
      "type": "String"
    },
    {
      "id": "cytomine_public_key",
      "value-key": "[@ID]",
      "command-line-flag": "--@id",
      "name": "Cytomine public key",
      "set-by-server": true,
      "optional": false,
      "type": "String"
    },
    {  
      "id": "cytomine_private_key",
      "value-key": "[@ID]",
      "command-line-flag": "--@id",
      "name": "Cytomine private key",
      "set-by-server": true,
      "optional": false,
      "type": "String"
    },
    {
      "id": "cytomine_id_project",
      "value-key": "[@ID]",
      "command-line-flag": "--@id",
      "name": "Cytomine project ID",
      "set-by-server": true,
      "optional": false,
      "type": "Number"
    },
    {
      "id": "cytomine_id_software",
      "value-key": "[@ID]",
      "command-line-flag": "--@id",
      "name": "Cytomine software ID",
      "set-by-server": true,
      "optional": false,
      "type": "Number"
    }, 
    {
      "id": "cytomine_id_job",
      "value-key": "[@ID]",
      "command-line-flag": "--@id",
      "description": "Job ID of CellDetect Stardist analysis which annotations to be classified",
      "set-by-server": false,
      "optional": false,      
      "type": "Domain",
      "uri": "/api/job.json?project=$currentProject$",
      "uri-sort-attribute": "softwareDate",
      "uri-print-attribute": "softwareName"
    },
    {
      "id": "cytomine_id_user",
      "value-key": "[@ID]",
      "command-line-flag": "--@id",
      "name": "Cytomine User ID for the Annotation Job",
      "description": "User ID of CellDetect Stardist job analysis",
      "set-by-server": false,
      "optional": false,
      "type": "Number",
      "uri": "/api/job.json?id=$cytomine_id_job$?userJob?",
      "uri-sort-attribute": "softwareDate",
      "uri-print-attribute": "softwareName"
    }
  ]
}
